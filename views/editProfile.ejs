<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Profile</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <style>
      .sidebar {
        min-height: 100vh;
        background-color: #f8f9fa;
        padding-top: 20px;
        border-right: 1px solid #ddd;
      }
    </style>
    <style>
      body {
        margin: 0;
        padding: 0;
      }

      .fixed-navbar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1040;
        background-color: white;
        border-bottom: 1px solid #ddd;
      }
      .mt-custom {
        margin-top: 56px; /* height of fixed navbar */
      }
    </style>
  </head>
  <body>
    <div class="fixed-navbar"><%- include('navbar') %></div>

    <div class="container-fluid mt-custom">
      <div class="row">
        <%- include('accountpanel') %>

        <div class="col-9 p-4">
          <h1 class="text-center">Edit Profile</h1>
          <form id="editProfileForm" class="mt-4">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="Enter your name"
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="Enter your email"
              />
            </div>
            <div class="mb-3">
              <label for="mobile" class="form-label">Mobile</label>
              <input
                type="text"
                class="form-control"
                id="mobile"
                placeholder="Enter your mobile number"
              />
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </form>
        </div>
      </div>
    </div>

    <%- include('footer') %>

    <script>
      const API_URL = "http://localhost:5000";

      document.addEventListener("DOMContentLoaded", async () => {
        try {
          const response = await fetch(`${API_URL}/api/userRole`);
          const data = await response.json();

          if (!data.success) return;

          const userResponse = await fetch(
            `${API_URL}/auth/profile?userId=${data.userId}`
          );
          const userData = await userResponse.json();

          if (!userData) return;

          document.getElementById("name").value = userData.name;
          document.getElementById("email").value = userData.email;
          document.getElementById("mobile").value = userData.mobile;
        } catch (err) {
          console.error(err);
        }
      });

      document
        .getElementById("editProfileForm")
        .addEventListener("submit", async (e) => {
          e.preventDefault();

          const name = document.getElementById("name").value;
          const email = document.getElementById("email").value;
          const mobile = document.getElementById("mobile").value;

          try {
            const userRoleResponse = await fetch(`${API_URL}/api/userRole`);
            const userRoleData = await userRoleResponse.json();

            if (!userRoleData.success) {
              alert("Failed to fetch user ID");
              return;
            }

            const response = await fetch(`${API_URL}/auth/profile`, {
              method: "PUT",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                userId: userRoleData.userId,
                name,
                email,
                mobile,
              }),
            });

            if (response.ok) {
              alert("Profile updated successfully");
            } else {
              const errorData = await response.json();
              alert(`Failed to update profile: ${errorData.message}`);
            }
          } catch (err) {
            console.error(err);
            alert("An error occurred while updating the profile");
          }
        });
    </script>
  </body>
</html>
