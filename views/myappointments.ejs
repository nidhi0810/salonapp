<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Appointments</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <style>
      .appointment-card {
        display: flex;
        flex-direction: row;
        align-items: center;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .appointment-card .card-info {
        flex: 1;
      }
      .appointment-card .actions {
        margin-left: 20px;
      }
      .appointment-card .actions button {
        margin-bottom: 10px;
      }
      .appointment-card .status {
        font-weight: bold;
      }
      .status.request-sent {
        color: #007bff;
      }
      .status.confirmed {
        color: #28a745;
      }
      .status.completed {
        color: #6c757d;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <h2 class="mb-4">My Appointments</h2>
      <div id="appointmentsContainer">
        <!-- Appointments will be dynamically rendered here -->
      </div>
    </div>

    <script>
      const API_URL = "http://localhost:5000";

      // Function to fetch user ID and appointments
      const fetchAppointments = async () => {
        try {
          // Fetch logged-in user's ID
          const userResponse = await fetch(`${API_URL}/api/userRole`);
          const { userId } = await userResponse.json();

          // Fetch appointments for the user
          const appointmentsResponse = await fetch(
            `${API_URL}/api/users/${userId}/appointments`
          );
          const appointments = await appointmentsResponse.json();

          // Render appointments
          renderAppointments(appointments);
        } catch (error) {
          console.error("Error fetching appointments:", error);
        }
      };

      const renderAppointments = (appointments) => {
        const container = document.getElementById("appointmentsContainer");
        container.innerHTML = ""; // Clear previous content

        appointments.forEach((appointment) => {
          const card = document.createElement("div");
          card.className = "appointment-card";
          card.innerHTML = `
      <div class="card-info">
        <h5 class="card-title">Appointment on ${
          appointment.appointmentDate
        } at ${appointment.appointmentTime}</h5>
        <p class="card-text">Status: <span class="status ${appointment.status
          .toLowerCase()
          .replace(" ", "-")}">${appointment.status}</span></p>
        <p class="card-text">Services: ${appointment.services
          .map((service) => service.serviceName)
          .join(", ")}</p>
        <p class="card-text">Packages: ${appointment.packages
          .map((pkg) => pkg.packageName)
          .join(", ")}</p>
      </div>
    `;
          container.appendChild(card);
        });
      };

      // Fetch appointments on page load
      fetchAppointments();
    </script>
  </body>
</html>
